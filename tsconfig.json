{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": ["types/*", "*"]
    },
    "target": "es2018",
    "module": "commonjs",
    "importHelpers": true,
    "strict": true,
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "preserveSymlinks": true,
    "listEmittedFiles": true,
    "declaration": true,
    "declarationMap": true,
    "composite": true
  }
}
